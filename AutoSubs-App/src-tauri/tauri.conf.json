{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "AutoSubs",
  "version": "3.0.6",
  "identifier": "com.autosubs",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AutoSubs",
        "width": 750,
        "height": 740,
        "closable": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$DESKTOP/**",
          "$DOCUMENT/**",
          "$DOWNLOAD/**",
          "$RESOURCE/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "app",
      "deb"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/"
    ],
    "externalBin": [
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ],
    "macOS": {
      "minimumSystemVersion": "13.0"
    },
    "linux": {
      "deb": {
        "files": {
          "/opt/resolve/Fusion/Scripts/Utility/AutoSubs.lua": "resources/AutoSubs.lua",
          "/opt/resolve/Fusion/Scripts/Utility/AutoSubs": "resources/AutoSubs/"
        }
      }
    },
    "windows": {
      "nsis": {
        "template": "./windows/custom_installer.nsi",
        "installerHooks": "./windows/hooks.nsi",
        "installerIcon": "icons/icon.ico"
      },
      "certificateThumbprint": "df6635960a607103e4882c0671c2f8d0ef2ace18",
      "timestampUrl": "http://time.certum.pl",
      "digestAlgorithm": "sha256",
      "signCommand": {
        "cmd": "powershell.exe",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-File",
          "./windows/sign.ps1",
          "%1"
        ]
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFENjNBQjZFRkVCQTQxQTkKUldTcFFiciticXRqcmZtTlRWRzdnSHhBMFVNZkxvOGFRZThXdXFNQjFzakxqNDF0bUFyWkhwckUK",
      "endpoints": [
        "https://github.com/tmoroney/auto-subs/releases/latest/download/latest.json"
      ]
    }
  }
}