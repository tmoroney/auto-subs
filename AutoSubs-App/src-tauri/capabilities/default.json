{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "updater:default",
    "shell:allow-open",
    "clipboard-manager:allow-write-text",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.tauri.app"
        },
        {
          "url": "http://localhost:*"
        },
        {
          "url": "https://huggingface.co/*"
        },
        {
          "url": "https://cdn-lfs.huggingface.co/*"
        },
        {
          "url": "https://cdn-lfs-us-1.huggingface.co/*"
        },
        {
          "url": "https://github.com/thewh1teagle/pyannote-rs/releases/*"
        }
      ],
      "deny": [
        {
          "url": "https://private.tauri.app"
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    },
    "fs:allow-resource-read-recursive",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    "dialog:default",
    {
      "identifier": "dialog:allow-save",
      "allow": [
        {
          "path": "$DESKTOP/*"
        },
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOWNLOAD/*"
        }
      ]
    },
    "store:default",
    "core:window:default",
    {
      "identifier": "core:window:allow-close"
    },
    {
      "identifier": "core:window:allow-start-dragging"
    },
    {
      "identifier": "core:window:allow-minimize"
    },
    {
      "identifier": "core:window:allow-toggle-maximize"
    },
    "process:default",
    "shell:default",
    "os:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$APPLOG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPCACHE/**" },
        { "path": "$APPLOCALDATA/**" }
      ]
    }
  ]
}